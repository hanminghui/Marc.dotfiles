!xterm settings
xterm*termName:xterm-256color
xterm*visualBell:false
xterm*marginBell:false
xterm*saveLines:1000
!Use a nice turetype font and size by default
xterm*faceName:Anonymous Pro:antialias=true
xterm*faceNameDoulesize:Source Han Sans CN:antialias=true
xterm*faceSize:14
xterm*scaleHeight:1.05
xterm*locale:true
!Position & frames
!xterm*geometry:120x35+400+120
xterm*borderLess:true
!xterm*scrollBar:true
!xterm*rightScrollBar:true
xterm*cursorBlink:true
!Color
xterm*background:rgb:30/30/30
xterm*foreground:white
xterm*pointerColor:white

! urxvt settings
! ================================================================================
!urxvt transparent
!urxvt.transparent: false
!urxvt.shading:130

!! Appearance
urxvt.termName: rxvt-unicode
urxvt.background:rgb:30/30/30
urxvt.foreground:white
urxvt.cursorBlink: true
urxvt.scrollBar: false
urxvt.scrollBar_right: false
urxvt.urgentOnBell: true
!! Font prefferenes
Xft.dpi: 96
Xft.antialias:true
URxvt.letterSpace: 1
URxvt.font: xft:Anonymous Pro:style=Regular:pixelsize=18,\
            xft:DejaVu Sans:pixelsize=18,\
            xft:Source Han Sans CN:style=Regular:pixelsize=24:minispace=True
URxvt.boldFont: xft:Anonymous Pro:style=Bold:pixelsize=18,\
            xft:Source Han Sans CN:style=Bold:pixelsize=18:minispace=False
!! Larger history limit
urxvt.saveLines: 1000000

!! Tango color theme
!! Strange - it matches tango from gnome-terminal, but looks different
URxvt.color0: rgb:00/00/00
URxvt.color1: rgb:CC/00/00
URxvt.color2: rgb:4E/9A/06
URxvt.color3: rgb:C4/A0/00
URxvt.color4: rgb:34/65/A4
